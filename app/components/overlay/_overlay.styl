// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

$accent-color = #00C853

#Terminal-Screen
  position: fixed
  top: 0
  left: 0
  z-index: 50
  pointer-events: none
  
  &:before,
  &::before
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background: linear-gradient(#444 50%, #000 50%)
    background-size: 100% 4px
    background-repeat: repeat-y
    opacity: 0.14
    box-shadow: inset 0px 0px 1px 1px rgba(0, 0, 0, .8)
    animation: pulse 5s linear infinite
    z-index: 51
  
  &:after,
  &::after
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: $accent-color;
    background: radial-gradient(ellipse at center, rgba(0,0,0,1) 0%, rgba(0,0,0,0.62) 45%, rgba(0,9,4,0.6) 47%, $accent-color 100%)
    box-shadow: inset 0px 0px 4px 4px rgba(100, 100, 100, .5)
    opacity: 0.1;
    z-index: 52
    
  .green-burn
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    box-shadow: inset 0px 0px 1px 1px rgba(64, 64, 64, .1)
    background: radial-gradient(ellipse at center,darken($accent-color,1%) 0%,rgba(64,64,64,0) 50%)
    transform-origin: 50% 50%
    transform: perspective(20px) rotateX(.5deg) skewX(2deg) scale(1.03)
    animation: glitch 1s linear infinite
    opacity: .9
    
    &:after,
    &::after
      content: ''
      background: radial-gradient(ellipse at center, rgba(0,0,0,0.5) 0%,rgba(64,64,64,0) 100%)
      opacity: .1
      
  .scanline
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 53
    
    &:before,
    &::before
      content : ''
      position : absolute
      top: 0px
      width: 100%
      height: 50px
      background: #fff
      background: linear-gradient(to bottom, rgba(255,0,0,0) 0%,rgba(255,250,250,1) 50%,rgba(255,255,255,0.98) 51%,rgba(255,0,0,0) 100%)
      opacity: .01
      animation: vline 1.25s linear infinite 
    &:after,
    &::after
      content: ''
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      box-shadow: 0 2px 6px rgba(25,25,25,0.2),
              inset 0 1px rgba(50,50,50,0.1),
              inset 0 3px rgba(50,50,50,0.05),
              inset 0 3px 8px rgba(64,64,64,0.05),
              inset 0 -5px 10px rgba(25,25,25,0.1)
    
@keyframes pulse
  0%
    transform: scale(1.001)
    opacity: 0.50
  8%
    transform: scale(1.000)
    opacity: .40
  15%
    transform: scale(1.004)
    opacity: 0.50
  30%
    transform: scale(1.002)
    opacity: .25
  100%
    transform: scale(1.000)
    opacity: 0.50

@keyframes glitch
  0%
    transform: scale(1, 1.002)
  50%
    transform: scale(1, 1.0001)
  100%
    transform: scale(1.001, 1)
    
@keyframes vline
  0%
    top: 0px
  100%
    top: 100%


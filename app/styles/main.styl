// nib is a powerful lib for stylus that provides cross-browser css3 mixins.
// No more vendor prefixes. http://visionmedia.github.com/nib/
@import 'nib'

@font-face
  font-family: 'icons'
  src:url('../fonts/icomoon.eot?-p6y15x')
  src:url('../fonts/icomoon.eot?#iefix-p6y15x') format('embedded-opentype'),
      url('../fonts/icomoon.ttf?-p6y15x') format('truetype'),
      url('../fonts/icomoon.woff?-p6y15x') format('woff'),
      url('../fonts/icomoon.svg?-p6y15x#icomoon') format('svg');
  font-weight: normal
  font-style: normal

[class^="icon-"], [class*=" icon-"]
  font-family: 'icons'
  speak: none
  font-style: normal
  font-weight: normal
  font-variant: normal
  text-transform: none
  line-height: 1
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale
  
.icon-tri-up:before
  content: "\f0aa"
.icon-tri-down:before
  content: "\f05b"
.icon-tri-right:before
  content: "\f05a"
.icon-tri-left:before
  content: "\f044"
.icon-spin:before
  content: "\e600"
.icon-skeletor:before
  content: "\e601"

@import '_globals'
@import '../components/root/_root'
@import '../components/header/_header'
@import '../components/stage/_stage'
@import '../components/menu/_menu'
@import '../components/pages/_pages'
